/* register.wxss */
.container {
  padding: 40rpx;
  box-sizing: border-box;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

.logo image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.form-container {
  flex: 1;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-item {
  margin-bottom: 30rpx;
}

.input-item .label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-item input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.verification-code {
  position: relative;
}

.verification-code input {
  padding-right: 160rpx;
}

.code-btn {
  position: absolute;
  right: 0;
  top: 70rpx;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  padding: 0;
}

.code-btn[disabled] {
  background-color: #ccc;
}

.agreement {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.agreement checkbox {
  margin-right: 10rpx;
}

.agreement .link {
  color: #07c160;
}

.register-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 45rpx;
  margin-bottom: 30rpx;
  text-align: center;
  padding: 0;
}

.register-btn[disabled] {
  background-color: #ccc;
}

.login {
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.login .link {
  color: #07c160;
  margin-left: 10rpx;
}

/* 性别选择样式 */
.gender-options {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.gender-options radio-group {
  display: flex;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  margin-right: 60rpx;
}

.radio-item radio {
  margin-right: 10rpx;
}
