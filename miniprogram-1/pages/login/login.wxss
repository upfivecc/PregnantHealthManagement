/* login.wxss */
.container {
  padding: 40rpx;
  box-sizing: border-box;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.logo image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.form-container {
  flex: 1;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-item {
  margin-bottom: 40rpx;
}

.input-item .label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-item input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.forgot-password {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 40rpx;
}

.forgot-password text {
  font-size: 28rpx;
  color: #07c160;
}

.agreement {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.agreement checkbox {
  margin-right: 10rpx;
}

.agreement .link {
  color: #07c160;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 45rpx;
  margin-bottom: 30rpx;
  text-align: center;
  padding: 0;
}

.login-btn[disabled] {
  background-color: #ccc;
}

.register {
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.register .link {
  color: #07c160;
  margin-left: 10rpx;
}

/* 用户信息面板样式 */
.user-container {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding-top: 20rpx;
}

.user-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

/* 用户信息 */
.user-details-section {
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
  text-align: center;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
}

/* 装饰性信息卡片 */
.info-cards {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.info-card {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 0 10rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.pregnancy-icon {
  background-color: #ff6b6b;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path fill="white" d="M12 2C12 2 10 5 10 9c0 5.5 7 13 7 13s-7-7.5-7-13c0-4 2-9 2-9z"/></svg>');
  background-size: 60%;
  background-position: center;
  background-repeat: no-repeat;
}

.baby-icon {
  background-color: #4ecdc4;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path fill="white" d="M12 17c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm-2.1-6l3.78 8.84c.22.5.8.5 1.02 0L15.1 11H9.9z"/></svg>');
  background-size: 60%;
  background-position: center;
  background-repeat: no-repeat;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.card-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 快速提示 */
.quick-tips {
  width: 100%;
  margin-bottom: 60rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tip-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.tip-item:last-child {
  border-bottom: none;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  background-color: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 45rpx;
  text-align: center;
  padding: 0;
}

.logout-btn:active {
  background-color: #ff7875;
}
