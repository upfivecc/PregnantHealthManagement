/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  width: 100%;
}

.container {
  padding: 0 0 30rpx;
  box-sizing: border-box;
  width: 100%;
}

  /* 欢迎标题区域 */
  .welcome-section {
    background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
    box-shadow: 0 4rpx 20rpx rgba(255, 154, 158, 0.2);
    padding: 60rpx 30rpx;
    width: 100%;
    box-sizing: border-box;
    text-align: center;
    color: #fff;
  }

  .welcome-title {
    font-size: 44rpx;
    font-weight: bold;
    margin-bottom: 16rpx;
    display: block;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }

  .welcome-subtitle {
    font-size: 30rpx;
    color: rgba(255, 255, 255, 0.9);
    display: block;
    line-height: 1.5;
  }

  /* 快捷功能按钮区域 */
.quick-functions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 0;
  margin-bottom: 15rpx;
  width: 100%;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s, box-shadow 0.2s;
  border-right: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.function-item:last-child {
  border-right: none;
}

.function-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.function-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: 60rpx;
  background-position: center;
  background-repeat: no-repeat;
}

.doctor-icon {
  background-color: #e3f2fd;
  background-image: url('https://youke2.picui.cn/s1/2025/12/13/693ca4928aa5a.png');
}

.record-icon {
  background-color: #f3e5f5;
  background-image: url('https://youke2.picui.cn/s1/2025/12/13/693ca4a7b1c29.png');
}

.knowledge-icon {
  background-color: #e8f5e8;
  background-image: url('https://youke2.picui.cn/s1/2025/12/13/693ca4a777976.png');
}

.consult-icon {
  background-color: #fff3e0;
  background-image: url('https://youke2.picui.cn/s1/2025/12/13/693ca4928aa5a.png');
}

.function-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 通用区域标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding-left: 30rpx;
  border-left: 8rpx solid #ff9a9e;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title::after {
  content: '▶';
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
}

/* 孕期小贴士区域 */
.tips-section {
  margin-bottom: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.tips-card {
  background-color: #fff;
  padding: 25rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.tips-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(180deg, #ff9a9e 0%, #fad0c4 100%);
}

.tips-content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
}

/* 孕期进度区域 */
.progress-section {
  margin-bottom: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.progress-card {
  background-color: #fff;
  padding: 25rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  width: 60%;
  background: linear-gradient(90deg, #ff9a9e 0%, #fad0c4 100%);
  border-radius: 8rpx;
}

.progress-fill.empty {
  width: 0;
}

.progress-text {
  font-size: 30rpx;
  color: #ff9a9e;
  font-weight: bold;
  text-align: center;
}

/* 推荐阅读区域 */
.recommend-section {
  margin-bottom: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.recommend-card {
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.recommend-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}

.recommend-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: 50rpx;
  background-position: center;
  background-repeat: no-repeat;
}

.nutrition-icon {
  background-color: #e8f5e8;
  background-image: url('https://youke2.picui.cn/s1/2025/12/13/693ca4a777976.png');
}

.exercise-icon {
  background-color: #e3f2fd;
  background-image: url('https://youke2.picui.cn/s1/2025/12/13/693ca4a777976.png');
}

.recommend-content {
  flex: 1;
}

.recommend-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.recommend-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.recommend-divider {
  height: 1rpx;
  background-color: #f5f5f5;
  margin: 0 30rpx;
}

/* 温馨提醒区域 */
.reminder-section {
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.reminder-card {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: #fff9e6;
  border: 2rpx solid #ffd700;
  width: 100%;
  box-sizing: border-box;
}

.reminder-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.reminder-text {
  flex: 1;
  font-size: 28rpx;
  color: #e67e22;
  line-height: 1.5;
}
