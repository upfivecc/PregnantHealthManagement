/* consult.wxss */
.consult-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 医生信息头部 */
.doctor-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e0e0e0;
}

.doctor-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.doctor-info {
  flex: 1;
}

.doctor-name-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 8rpx;
}

.doctor-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.doctor-title {
  font-size: 28rpx;
  color: #666666;
  background-color: #f0f0f0;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}

.online-status {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.online-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #4CAF50;
  margin-right: 6rpx;
}

.online-text {
  font-size: 24rpx;
  color: #4CAF50;
}

.doctor-department {
  font-size: 28rpx;
  color: #666666;
}

/* 连接状态 */
.connecting-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 聊天内容区域 */
.chat-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.messages-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 消息项 */
.message-item {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}

.message-item.sent {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.message-content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-width: 70%;
}

.message-item.sent .message-content-wrapper {
  align-items: flex-end;
}

.message-content {
  background-color: #ffffff;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.message-item.sent .message-content {
  background-color: #4CAF50;
}

.message-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 44rpx;
  word-wrap: break-word;
}

.message-item.sent .message-text {
  color: #ffffff;
}

.message-time {
  font-size: 20rpx;
  color: #999999;
  margin-top: 8rpx;
  padding: 0 10rpx;
}

/* 输入区域 */
.input-area {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e0e0e0;
}

.message-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #333333;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #4CAF50;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.send-button:disabled {
  background-color: #cccccc;
}
