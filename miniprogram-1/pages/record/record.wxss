/* record.wxss */
/* 全局重置和基础样式 */
view, text, input, button, picker, block {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* 强制横向铺满 */
page {
  width: 100%;
  margin: 0;
  padding: 0;
}

/* 确保所有主要区域都横向铺满 */
.container,
.form-section,
.chart-section,
.records-section {
  width: 100% !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* 确保表单元素横向铺满 */
.form-item,
.form-item input,
.picker,
.pressure-inputs {
  width: 100% !important;
  margin: 0 !important;
}

/* 确保图表区域横向铺满 */
.chart-container,
.chart,
.chart-lines {
  width: 100% !important;
  margin: 0 !important;
}

/* 为内容区域添加内边距 */
.inner-content {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.container {
  width: 100%;
  padding: 0 !important;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: block !important;
  align-items: stretch !important;
  justify-content: flex-start !important;
}

/* 通用样式 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 表单区域 */
.form-section {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-item input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  background-color: #fff;
  transition: border-color 0.3s ease;
}

.form-item input:focus {
  border-color: #07c160;
  outline: none;
}

/* 日期选择器 */
.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333;
  background-color: #fff;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 血压输入 */
.blood-pressure {
  display: flex;
  flex-direction: column;
}

.pressure-inputs {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.pressure-inputs input {
  flex: 1;
  max-width: 200rpx;
  text-align: center;
}

.pressure-inputs .separator {
  font-size: 36rpx;
  color: #666;
  font-weight: bold;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  font-size: 36rpx;
  background-color: #1989fa;
  color: #fff;
  border-radius: 48rpx;
  margin-top: 30rpx;
  border: none;
  outline: none;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  letter-spacing: 2rpx;
  transition: background-color 0.3s ease;
}

.submit-btn:active {
  background-color: #096dd9;
}

/* 图表区域 */
.chart-section {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.chart-container {
  height: 320rpx;
  position: relative;
  width: 100%;
}

.chart {
  width: 100%;
  height: 100%;
  position: relative;
}

.chart-lines {
  width: 100%;
  height: 80%;
  position: relative;
  border-bottom: 2rpx solid #e0e0e0;
  border-left: 2rpx solid #e0e0e0;
}

.chart-point {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background-color: #1989fa;
  border-radius: 50%;
  transform: translate(-50%, 50%);
  box-shadow: 0 2rpx 8rpx rgba(25, 137, 250, 0.3);
}

.chart-point .tooltip {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.75);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  white-space: nowrap;
  display: none;
  z-index: 10;
}

.chart-point:active .tooltip {
  display: block;
}

.chart-line {
  position: absolute;
  width: 100%;
  height: 100%;
  bottom: 10%;
}

.line-connector {
  position: absolute;
  height: 3rpx;
  background-color: #1989fa;
  width: 100%;
}

.chart-labels {
  display: none;
}

.chart-label {
  display: none;
}

/* 历史记录区域 */
.records-section {
  width: 100%;
  background-color: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 32rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.records-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.record-item {
  padding: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
  background-color: #fafafa;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  transition: background-color 0.2s ease;
}

.record-item:last-child {
  margin-bottom: 0;
}

.record-item:active {
  background-color: #f0f0f0;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.delete-btn {
  font-size: 28rpx;
  color: #ff4d4f;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background-color: #fff1f0;
  transition: all 0.2s ease;
}

.delete-btn:active {
  background-color: #ffccc7;
}

.record-content {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.record-item-detail {
  font-size: 28rpx;
  color: #666;
  background-color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e8e8e8;
}

/* 修复重复的record-item选择器 */
.record-content .record-item-detail {
  font-size: 28rpx;
  color: #666;
  background-color: #fff;
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e8e8e8;
}
